'use strict';

{
  const btn = document.getElementById('btn');

  btn.addEventListener('click',() => {
    const results = ['大吉', '吉', '大凶'];
    const n = Math.floor(math.random()) * 3);

    swich (n) {
      case 0:
        btn.textContent = '大吉';
        break;
      case 1:
        btn.textContent = '吉';
        break;
      case 2:
        btn.textContent = '大凶';
        break;
    }
  });
}